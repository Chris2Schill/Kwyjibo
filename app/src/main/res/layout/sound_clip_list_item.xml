<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/darkGray"
    android:minHeight="50dp"
    android:weightSum="6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/sound_clip_listitem_name_relativelayout"
        android:gravity="center_horizontal">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/studio_mode_list_item_soundname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:singleLine="true"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:text="sound name"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2 ">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/studio_mode_list_item_contributors_name_textview"
            android:textSize="12sp"
            android:text="name"
            android:textColor="@color/lightestGray"
            android:layout_gravity="top|end"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/studio_mode_list_item_location_textview"
            android:textSize="12sp"
            android:text="location"
            android:textColor="@color/lightestGray"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="36dp"
            android:contentDescription="Play sound button"
            android:layout_height="36dp"
            android:id="@+id/sound_clip_list_item_playsoundclip_button"
            android:src="@drawable/arrow_right_drop_circle_outline"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>

