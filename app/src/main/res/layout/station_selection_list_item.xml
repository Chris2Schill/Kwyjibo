<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/station_selection_cardview"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAlignment="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/station_selection_cardview_textview"
            android:layout_weight=".825"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_centerVertical="true"
            android:text="station name"
            android:textSize="30sp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight=".175"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/station_selection_cardview_numclips_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="9"
                android:textColor="@color/lightGray"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/station_selection_cardview_sounds_icon"
                android:layout_toStartOf="@+id/station_selection_cardview_sounds_icon"/>

            <ImageView
                android:id="@+id/station_selection_cardview_sounds_icon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                app:srcCompat="@drawable/ic_music_note"
                tools:ignore="MissingPrefix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp" />

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>


