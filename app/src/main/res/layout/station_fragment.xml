<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:triangle="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:id="@+id/station_fragment_current_sounds_framelayout">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/lightGray"
            android:dividerHeight="4px"
            android:id="@+id/station_fragment_current_sounds_listview"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:id="@+id/station_fragment_buttons_relativelayout">

        <com.seniordesign.kwyjibo.drawables.Triangle
            android:id="@+id/station_fragment_play_stream_imagebutton"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:rotation="90"
            triangle:triangleStrokeColor="@android:color/black"
            triangle:triangleColor="@color/green"
            triangle:triangleStrokeWidth="3dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/signup_button"
            android:text="Add Sound"
            android:textColor="@color/white"
            android:id="@+id/add_sound_to_station_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="Save Feed"
            android:textColor="@color/white"
            android:id="@+id/station_fragment_save_feed_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:text="Station List"
            android:textColor="@color/white"
            android:id="@+id/station_fragment_station_list_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
