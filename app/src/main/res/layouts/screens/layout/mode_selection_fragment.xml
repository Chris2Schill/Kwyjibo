<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/lightYellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="SoundNStein"
        android:textColor="@color/lightGray"
        android:id="@+id/mode_selection_title_textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp" />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="10dp"
        android:id="@+id/record_mode_button"
        android:background="@null"
        android:layout_below="@+id/mode_selection_title_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/ic_microphone"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="10dp"
        android:id="@+id/radio_mode_button"
        android:background="@null"
        android:layout_below="@+id/record_mode_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/ic_radio"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:elevation="10dp"
        android:id="@+id/studio_mode_button"
        android:layout_below="@+id/radio_mode_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/ic_music_note"
        tools:ignore="MissingPrefix"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/signout_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_logout"
        tools:ignore="MissingPrefix" />


</RelativeLayout>