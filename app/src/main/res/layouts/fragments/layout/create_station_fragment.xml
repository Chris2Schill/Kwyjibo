<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_station_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CreateStationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorHint="@color/lightestGray"
        android:text="Station Name"
        android:textColor="@color/lightestGray"
        android:id="@+id/create_station_name_textview"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cool Chris Tunes"
        android:textColorHint="@color/lightestGray"
        android:textColor="@color/lightestGray"
        android:id="@+id/create_station_name_edittext"
        android:singleLine="true"
        android:layout_below="@+id/create_station_name_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:listDivider"
        android:layout_below="@+id/create_station_name_edittext"
        android:id="@+id/create_station_line_separator_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Genre"
        android:textColor="@color/lightestGray"
        android:id="@+id/create_station_genre_textview"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/create_station_line_separator_2"
        android:layout_alignTop="@+id/create_station_line_separator_2"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:id="@+id/Select_BPM_spinner"
        android:elevation="3dp"
        android:background="@color/lightYellow"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/create_station_line_separator_3"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:listDivider"
        android:id="@+id/create_station_line_separator_3" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:text="Create Station"
        android:textSize="20dp"
        android:background="@drawable/light_yellow_button"
        android:id="@+id/create_station_confirm_button"
        android:textColor="@color/lightestGray"
        android:layout_below="@+id/create_station_line_separator_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>
